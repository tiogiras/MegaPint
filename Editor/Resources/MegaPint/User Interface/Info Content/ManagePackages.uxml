<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="True">
    <Style src="project://database/Packages/com.tiogiras.megapint/Editor/Resources/MegaPint/User%20Interface/MegaPint.uss?fileID=7433441132597879392&amp;guid=54dba4b7e58379b46a03a9a47e130e51&amp;type=3#MegaPint" />
    <Editor.Scripts.GUI.Factories.Backgrounds.Background2 class="mpBg1AsBorderColor" style="border-bottom-color: rgb(255, 255, 255); border-bottom-width: 1px;">
        <Editor.Scripts.GUI.Factories.Headings.MpHeading2 tabindex="-1" text="How To: Manage Packages" style="overflow: hidden; white-space: normal; -unity-text-align: upper-center; padding-top: 5px; padding-right: 5px; padding-bottom: 5px; padding-left: 5px; font-size: 16px;" />
    </Editor.Scripts.GUI.Factories.Backgrounds.Background2>
    <ui:VisualElement style="margin-top: 5px; margin-right: 5px; margin-bottom: 20px; margin-left: 10px;">
        <Editor.Scripts.GUI.Factories.Text tabindex="-1" text="MegaPint is a collection of smaller packages that are hosted on &lt;link=&quot;github&quot;&gt;GitHub&lt;/link&gt;.&#10;&#10;Once you have the base package installed you can install any additional MegaPint package on top." class="mpLink" style="white-space: normal; margin-bottom: 5px;" />
        <Editor.Scripts.GUI.Factories.Separator Space="1.5" />
        <Editor.Scripts.GUI.Factories.Headings.MpHeading3 tabindex="-1" text="Solution 1: MegaPint PackageManager" style="white-space: normal; margin-top: 15px; margin-bottom: 5px; -unity-font-style: normal;" />
        <Editor.Scripts.GUI.Factories.Text tabindex="-1" text="The base package includes an internal package manager, which you can access via &lt;link=&quot;MegaPint/PackageManager&quot;&gt;MegaPint/PackageManager&lt;/link&gt;.&#10;&#10;This window serves as an overview over all your currently installed packages as well as the ones available for your MegaPint base package version.&#10;&#10;By simply searching for the package you want and hitting the install button the package gets installed via the git url through the normal package manager. Same goes for removing and updating packages.&#10;&#10;If the version number of a package is marked red it means the package has a new version and you might want to update the package." class="mpLink" style="white-space: normal;" />
        <Editor.Scripts.GUI.Factories.Headings.MpHeading3 tabindex="-1" text="Solution 2: Git URL" style="white-space: normal; margin-top: 15px; margin-bottom: 5px;" />
        <Editor.Scripts.GUI.Factories.Text tabindex="-1" text="The internal package manager uses the git url of the package and imports the package through the normal package manager.&#10;&#10;You can also do this manually by opening the unity package manager, clicking the plus button and choosing &quot;Add package from git URL...&quot;&#10;&#10;You can also update or remove the packages this way.&#10;&#10;All git urls of the available packages are linked on my &lt;link=&quot;website&quot;&gt;website&lt;/link&gt;." class="mpLink" style="white-space: normal;" />
    </ui:VisualElement>
</ui:UXML>
